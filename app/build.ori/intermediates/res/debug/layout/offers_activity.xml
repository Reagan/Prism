<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/login_form_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/login_spinner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ring_icon" />

        <TextView
            android:id="@+id/current_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/login_spinner"
            android:text="You are in"
            android:textColor="#fff"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/login_spinner"
            android:layout_below="@+id/current_section"
            android:text="Men's section"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/offer_items"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>


</LinearLayout><!-- From: file:/source/cmu-r/prism/prism-app/Prism/app/src/main/res/layout/offers_activity.xml -->