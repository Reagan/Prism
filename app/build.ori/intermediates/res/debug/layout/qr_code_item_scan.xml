<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/qr_code_scan_icon"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:scaleType="fitStart"
        android:layout_weight="0.8"/>

    <TextView
        android:id="@+id/qr_code_scan_time"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/qr_code_scan_location"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"/>

</LinearLayout><!-- From: file:/source/cmu-r/prism/prism-app/Prism/app/src/main/res/layout/qr_code_item_scan.xml -->